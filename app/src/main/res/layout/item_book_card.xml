<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/titleText" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" tools:text="Title:"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/titleTextView"
                tools:text="Little Prince"
                app:layout_constraintStart_toEndOf="@+id/titleText" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/titleText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/authtorText" app:layout_constraintStart_toStartOf="@+id/titleText"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/titleTextView" tools:text="author:" android:text="author:"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/authorTextView" app:layout_constraintStart_toEndOf="@+id/authtorText"
                android:layout_marginStart="8dp" tools:text="Antoine de Saint-ExupÃ©ry"
                app:layout_constraintTop_toTopOf="@+id/authtorText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publicationText" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/authtorText"
                app:layout_constraintStart_toStartOf="@+id/authtorText" tools:text="Publication Date:"
                android:text="Publication Date:" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publicationDateTextView" app:layout_constraintStart_toEndOf="@+id/publicationText"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/publicationText" tools:text="01/04/2018"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>